<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/cardBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/panelImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/sp"
            />

        <TextView
            android:id="@+id/panelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solar_panel"
            android:textColor="#424242"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/panelImage"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/panelDescription"
            android:text="nice solar panel"
            android:textColor="#696969"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/panelImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deletePanel"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/delete_panel_logo"
            android:onClick="delete"
            app:tint="@color/red_shade_2" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>